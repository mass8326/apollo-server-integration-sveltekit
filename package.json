{
	"name": "apollo-server-integration-sveltekit",
	"version": "0.1.0",
	"author": "mass8326",
	"homepage": "https://github.com/mass8326/apollo-server-integration-sveltekit",
	"url": "https://github.com/mass8326/apollo-server-integration-sveltekit/issues",
	"license": "MIT",
	"type": "module",
	"types": "./dist/index.d.ts",
	"main": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite dev",
		"generate": "graphql-codegen",
		"build": "vite build && pnpm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package -i src/lib/apollo && publint",
		"prepublishOnly": "pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint --fix . && prettier --ignore-path .eslintignore --write ."
	},
	"peerDependencies": {
		"@apollo/server": "^4.0.0",
		"@sveltejs/kit": "^1.0.0"
	},
	"devDependencies": {
		"@apollo/server": "^4.0.0",
		"@apollo/utils.withrequired": "^2.0.0",
		"@babel/core": "^7.21.0",
		"@graphql-codegen/cli": "^3.2.1",
		"@graphql-codegen/typescript": "^3.0.1",
		"@graphql-codegen/typescript-operations": "^3.0.1",
		"@graphql-codegen/typescript-resolvers": "^3.1.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/package": "^2.0.0",
		"@types/node": "^18.14.2",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-svelte3": "^4.0.0",
		"eslint-plugin-unicorn": "^45.0.2",
		"graphql": "^16.6.0",
		"graphql-tag": "^2.12.6",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"publint": "^0.1.9",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0"
	}
}
